# =============================================================================
# GROW GYMIX - ENVIRONMENT CONFIGURATION TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your actual values
# This file serves as a template for all required environment variables

# =============================================================================
# CONVEX CONFIGURATION
# =============================================================================
# Get these from your Convex dashboard: https://dashboard.convex.dev
CONVEX_DEPLOYMENT=
VITE_CONVEX_URL=

# =============================================================================
# AUTHENTICATION CONFIGURATION
# =============================================================================
# Auth providers configuration
AUTH_SECRET=
NEXTAUTH_URL=http://localhost:5173

# GitHub OAuth (if using GitHub auth)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Google OAuth (if using Google auth)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# =============================================================================
# AI SERVICES CONFIGURATION
# =============================================================================
# OpenAI API Configuration
OPENAI_API_KEY=
OPENAI_ORG_ID=

# Other AI providers (if needed)
ANTHROPIC_API_KEY=
COHERE_API_KEY=

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite Database (for local development)
DATABASE_URL=file:./dev.db

# PostgreSQL (for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/grow_gymix

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Email service (if using email notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# File storage (if using cloud storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_BUCKET_NAME=
AWS_REGION=

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Environment
NODE_ENV=development
VITE_APP_ENV=development

# Application URLs
VITE_APP_URL=http://localhost:5173
VITE_API_URL=http://localhost:5173/api

# Feature flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true
VITE_ENABLE_EXPERIMENTAL_FEATURES=false

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# For development and debugging
VITE_SHOW_DEV_TOOLS=true
VITE_LOG_LEVEL=debug

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# JWT Secret (generate a strong random string)
JWT_SECRET=

# Session secret
SESSION_SECRET=

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# =============================================================================
# MONITORING & ANALYTICS
# =============================================================================
# Analytics services (if using)
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=
SENTRY_DSN=

# =============================================================================
# AUGMENT REMOTE AGENT CONFIGURATION
# =============================================================================
# Configuration for Augment Remote Agents running in cloud environments

# Remote Agent Environment
AUGMENT_REMOTE_AGENT=false
AUGMENT_DEV_MODE=true
AUGMENT_LOG_LEVEL=info

# GitHub integration (required for Remote Agents)
GITHUB_TOKEN=
GITHUB_REPO=grow-grow-coder/grow-gymix
GITHUB_BRANCH=main

# Remote Agent specific settings
VITE_AUGMENT_REMOTE_MODE=false
VITE_AUGMENT_AGENT_ID=
