# =============================================================================
# GROW GYMIX - PRODUCTION ENVIRONMENT
# =============================================================================
# Production-specific environment variables
# This file is safe to commit (no secrets)
# Actual secrets should be set in your deployment platform

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=production
VITE_APP_ENV=production

# Application URLs (replace with your actual production URLs)
VITE_APP_URL=https://your-domain.com
VITE_API_URL=https://your-domain.com/api

# =============================================================================
# PRODUCTION FEATURES
# =============================================================================
# Disable development tools
VITE_SHOW_DEV_TOOLS=false
VITE_LOG_LEVEL=error
VITE_ENABLE_DEBUG=false
VITE_ENABLE_HOT_RELOAD=false

# Feature flags for production
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_EXPERIMENTAL_FEATURES=false
VITE_ENABLE_MOCK_DATA=false

# =============================================================================
# PRODUCTION SECURITY
# =============================================================================
# Strict CORS for production
CORS_ORIGINS=https://your-domain.com

# =============================================================================
# REMOTE AGENT PRODUCTION
# =============================================================================
# Configuration for Augment agents in production
AUGMENT_DEV_MODE=false
AUGMENT_LOG_LEVEL=error
AUGMENT_ENABLE_LIVE_RELOAD=false

# GitHub integration for production
GITHUB_BRANCH=main
GITHUB_REPO=grow-grow-coder/grow-gymix

# =============================================================================
# PRODUCTION OPTIMIZATION
# =============================================================================
# Build optimizations
VITE_BUILD_SOURCEMAP=false
VITE_BUILD_MINIFY=true

# Convex production
CONVEX_ENV=production

# =============================================================================
# MONITORING
# =============================================================================
# Enable production monitoring
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_ERROR_TRACKING=true
ENABLE_USAGE_ANALYTICS=true
