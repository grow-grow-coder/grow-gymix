# =============================================================================
# GROW GYMIX - DEVELOPMENT ENVIRONMENT
# =============================================================================
# Development-specific environment variables
# This file is safe to commit (no secrets)

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
NODE_ENV=development
VITE_APP_ENV=development

# Application URLs
VITE_APP_URL=http://localhost:5173
VITE_API_URL=http://localhost:5173/api

# =============================================================================
# DEVELOPMENT FEATURES
# =============================================================================
# Enable development tools
VITE_SHOW_DEV_TOOLS=true
VITE_LOG_LEVEL=debug
VITE_ENABLE_DEBUG=true
VITE_ENABLE_HOT_RELOAD=true

# Feature flags for development
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_EXPERIMENTAL_FEATURES=true
VITE_ENABLE_MOCK_DATA=true

# =============================================================================
# DEVELOPMENT DATABASE
# =============================================================================
# Use local SQLite for development
DATABASE_URL=file:./dev.db

# =============================================================================
# DEVELOPMENT SECURITY
# =============================================================================
# Relaxed CORS for development
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:8080

# =============================================================================
# REMOTE AGENT DEVELOPMENT
# =============================================================================
# Configuration for Augment agents in development
AUGMENT_DEV_MODE=true
AUGMENT_LOG_LEVEL=verbose
AUGMENT_ENABLE_LIVE_RELOAD=true

# GitHub integration for development
GITHUB_BRANCH=main
GITHUB_REPO=grow-grow-coder/grow-gymix

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Vite specific
VITE_OPEN_BROWSER=true
VITE_PORT=5173
VITE_HOST=localhost

# Convex development
CONVEX_ENV=development
